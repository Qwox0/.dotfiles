#!/bin/sh

add_path() {
    path=$1
    #echo "$path"
    # affix colons on either side of $PATH to simplify matching
    case ":${PATH}:" in
        *:"$path":*)
            # already in path
            ;;
        *)
            export PATH="$path:$PATH"
            ;;
    esac
}

add_path "$HOME/bin"
add_path "$HOME/.local/bin"
add_path "$HOME/.cargo/bin" # same as `. "$HOME/.cargo/env"`
